<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TicTocToeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="view_with_border">
        <item name="android:background">@drawable/border</item>
    </style>


    <style name="board_section" parent="view_with_border">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:freezesText">true</item>
        <item name="android:text">A</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:paddingLeft">@dimen/board_section_padding_side</item>
        <item name="android:paddingRight">@dimen/board_section_padding_side</item>
        <item name="android:paddingTop">@dimen/board_section_padding_top_and_bottom</item>
        <item name="android:paddingBottom">@dimen/board_section_padding_top_and_bottom</item>
    </style>


</resources>